{
  "containerDefinitions": [
    {
      "name": "tis-profile",
      "image": "430723991443.dkr.ecr.eu-west-2.amazonaws.com/profile:latest",
      "essential": true,
      "secrets": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "valueFrom": "spring-profile-active-profile-${environment}"
        },
        {
          "name": "DBHOST",
          "valueFrom": "dbhost-profile-${environment}"
        },
        {
          "name": "DBPORT",
          "valueFrom": "dbport-profile-${environment}"
        },
        {
          "name": "DBNAME",
          "valueFrom": "dbname-profile-${environment}"
        },
        {
          "name": "DBUSER",
          "valueFrom": "dbuser-profile-${environment}"
        },
        {
          "name": "DBPASSWORD",
          "valueFrom": "dbpassword-profile-${environment}"
        },
        {
          "name": "USE_SSL",
          "valueFrom": "use-ssl-profile-${environment}"
        },
        {
          "name": "LOG_DIR",
          "valueFrom": "log-dir-profile-${environment}"
        },
        {
          "name": "LOG_LEVEL",
          "valueFrom": "log-level-profile-${environment}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-${environment}-tis-profile",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "awslogs-tis-profile",
          "awslogs-create-group" : "true"
        }
      },
      "portMappings": [
        {
          "containerPort": 8082
        }
      ],
      "environment": [
        {
          "name": "TITLE",
          "value": "tis-profile"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-west-2"
        }
      ]
    }
  ],
  "family": "tis-profile-${environment}",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "executionRoleArn": "ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "2048"
}
